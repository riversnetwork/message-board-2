<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="well"> 
      <h2><%= @post.title %></h2>
      <hr>
      <p><%= @post.body %></p>
      <p>Posted by <%= @post_author %>
      <br><%= @post.created_at.strftime("%A, %B %d, %Y at %r") %></p>
      
      <h3>Comments</h3>
      <hr>
      <%= render @post.comments %>
      
      <%= render 'comments/form' %>
      <br>
      
      <% if user_signed_in? %>
        <% if @post.user_id == current_user.id %>
          <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-success" %>
          <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Delete this post?" }, class: "btn btn-danger" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>      